<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:gravity="center_vertical"
         android:layout_marginBottom="24dp">
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/ic_launcher_foreground" 
             android:backgroundTint="@color/dark_blue"/>
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENÚ PRINCIPAL"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@color/dark_blue"
            android:gravity="center"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Item 1: Individual Plan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnIndividual"
             android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/Style.FitMakers.Card"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_menu_individual"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Plan Individual"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- Opción 2: Comunidad -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCommunity"
             android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/Style.FitMakers.Card"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_menu_community"
                     android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comunidad y Eventos"
                    android:textAlignment="center"
                     android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- Opción 3: Entrenador IA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnAI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/Style.FitMakers.Card"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivAiLogo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/robot_anim"
                     android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistente IA"
                    android:textAlignment="center"
                     android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- Opción 4: Web Ejercicios -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnWeb"
             android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/Style.FitMakers.Card"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_menu_web"
                     android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Ejercicios Cognitivos"
                    android:textAlignment="center"
                     android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>