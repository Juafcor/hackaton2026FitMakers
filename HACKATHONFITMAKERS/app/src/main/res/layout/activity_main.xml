<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="60dp"> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMainTitle"
            style="@style/Style.FitMakers.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MENÃš PRINCIPAL" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnIndividual"
            style="@style/Style.FitMakers.Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/individualpng"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    style="@style/Style.FitMakers.Label.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Plan\nIndividual"
                    android:textAlignment="center"
                    android:textSize="21sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCommunity"
            style="@style/Style.FitMakers.Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/comunidad"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    style="@style/Style.FitMakers.Label.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comunidad\ny Eventos"
                    android:textAlignment="center"
                    android:textSize="21sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAI"
            style="@style/Style.FitMakers.Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivAiLogo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/robot_animacion"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    style="@style/Style.FitMakers.Label.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistente\nIA"
                    android:textAlignment="center"
                    android:textSize="21sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnWeb"
            style="@style/Style.FitMakers.Card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/cognitivo"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    style="@style/Style.FitMakers.Label.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Ejercicios\nCognitivos"
                    android:textAlignment="center"
                    android:textSize="21sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>