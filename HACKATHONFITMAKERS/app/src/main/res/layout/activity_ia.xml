<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootAiChat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAiAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:background="#E0F7FA"
        android:padding="10dp"
        android:contentDescription="Avatar de la IA" />

    <ScrollView
        android:id="@+id/scrollChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:id="@+id/llMessageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBotWelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Hola! Soy tu IA. Dime tus dudas."
                android:background="#E1E1E1"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvUserExampleMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué rutina me toca hoy?"
                android:background="#BBDEFB"
                android:padding="10dp"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llInputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe aquí tu duda..."
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar" />
    </LinearLayout>

</LinearLayout>