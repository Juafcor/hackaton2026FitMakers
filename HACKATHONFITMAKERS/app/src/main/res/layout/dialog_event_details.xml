<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_input_rounded"
    android:backgroundTint="@color/white">
    <!-- Usamos el fondo redondeado que ya tenemos -->

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del Evento"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personas apuntadas:"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvParticipantsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juan Pérez\nMaría López\nCarlos García\nAna Torres"
        android:background="#F0F0F0"
        android:textColor="#333333"
        android:padding="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnDialogAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apuntarse"
        style="@style/Style.FitMakers.Button.Green"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        style="@style/Style.FitMakers.Button.Secondary"/> 
        <!-- Botón para cerrar la ventana -->

</LinearLayout>