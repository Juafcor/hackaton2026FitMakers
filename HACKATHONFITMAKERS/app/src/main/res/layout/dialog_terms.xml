<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Style.FitMakers.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones"
            style="@style/Style.FitMakers.Title.Blue"
            android:textSize="28sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para su seguridad, necesitamos que acepte las políticas de privacidad."
            style="@style/Style.FitMakers.Body"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnMoreInfo"
            style="@style/Style.FitMakers.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER MÁS INFORMACIÓN"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/cbAcceptTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He leído y acepto."
                style="@style/Style.FitMakers.Label.Blue"
                android:textSize="22sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAcceptTerms"
            style="@style/Style.FitMakers.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR Y CONTINUAR"
            android:enabled="false"
            android:alpha="0.4"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>