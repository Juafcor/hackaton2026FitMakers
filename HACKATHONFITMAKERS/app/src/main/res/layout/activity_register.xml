<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svRegisterRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/dark_blue">

    <LinearLayout
        android:id="@+id/llRegisterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/tvRegisterTitle"
            style="@style/Style.FitMakers.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Registro" />

        <TextView
            android:text="Nombre completo :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="textPersonName" />

        <TextView
            android:text="Edad :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="number" />

        <TextView
            android:text="DNI :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDniRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="text" />

        <TextView
            android:text="Contraseña :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="textPassword" />

        <TextView
            android:text="Altura :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="number" />

        <TextView
            android:text="Peso :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Style.FitMakers.Input"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvSexLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_marginTop="10dp" />

        <RadioGroup
            android:id="@+id/rgSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_rounded"
                android:buttonTint="@color/dark_blue"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:text="Hombre" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input_rounded"
                android:buttonTint="@color/dark_blue"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:text="Mujer" />
        </RadioGroup>

        <!-- Address Separated Fields (Original Logic) -->
        <TextView
            android:text="Dirección :"
            style="@style/Style.FitMakers.Label.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAddressStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calle / Avenida"
            android:textColorHint="#CCCCCC"
            style="@style/Style.FitMakers.Input"
            android:inputType="textPostalAddress" 
            android:layout_marginBottom="8dp"/>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <EditText
                android:id="@+id/etAddressNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="Número"
                android:textColorHint="#CCCCCC"
                style="@style/Style.FitMakers.Input"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etAddressCP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="C. Postal"
                android:textColorHint="#CCCCCC"
                style="@style/Style.FitMakers.Input"
                android:inputType="number"/>
        </LinearLayout>


        <!-- Pathologies (Original Logic - CheckBox) with New Style -->
        <TextView
            android:id="@+id/tvPathologyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patología :"
            android:layout_marginTop="15dp"
            style="@style/Style.FitMakers.Label.White" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbUpperBody"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_input_rounded"
                android:buttonTint="@color/dark_blue"
                android:textColor="@color/dark_blue"
                android:padding="8dp"
                android:text="Superior" />

            <CheckBox
                android:id="@+id/cbLowerBody"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input_rounded"
                android:buttonTint="@color/dark_blue"
                android:textColor="@color/dark_blue"
                android:padding="8dp"
                android:text="Inferior" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnMicRegister"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_mic"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:contentDescription="Grabar voz"
            android:layout_marginBottom="24dp"
            app:tint="@color/white" />

        <Button
            android:id="@+id/btnFinishRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="200dp"
            style="@style/Style.FitMakers.Button.Primary"
            android:text="Registro" />

    </LinearLayout>
</ScrollView>