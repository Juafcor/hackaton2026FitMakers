<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/custom_green</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers" parent="android:Theme" />

    <style name="Style.FitMakers.Button" parent="Widget.MaterialComponents.Button"/>

    <style name="Style.FitMakers.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">38sp</item> <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Title.Blue" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">38sp</item> <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Label.White" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item> <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Label.Blue" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item> <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item> <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input_rounded</item>

        <item name="android:theme">@style/Theme.FitMakers.InputOverride</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">#7F8C8D</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Button.Green" parent="Style.FitMakers.Button.Primary">
        <item name="backgroundTint">@color/custom_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Style.FitMakers.Button.Orange" parent="Style.FitMakers.Button.Primary">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Style.FitMakers.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">20dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="Style.FitMakers.DayText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="Style.FitMakers.Button.Small" parent="Style.FitMakers.Button.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="cornerRadius">14dp</item>
    </style>

    <style name="Theme.FitMakers.InputOverride" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/dark_blue</item>

        <item name="colorControlNormal">@color/dark_blue</item>

        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>