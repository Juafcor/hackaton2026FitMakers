<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/Style.FitMakers.Card"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvItemEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título del Evento"
                    style="@style/Style.FitMakers.Subtitle"
                    android:layout_marginBottom="4dp"
                    android:textSize="25sp"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvItemEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha: DD MMM | Hora: HH:MM"
                    android:layout_marginTop="4dp"
                    style="@style/Style.FitMakers.Body"
                    android:textColor="@color/orange"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvItemEventPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar: Ubicación"
                    android:textStyle="italic"
                    style="@style/Style.FitMakers.Body"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"/>
                 
                 <TextView
                    android:id="@+id/tvItemEventDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción del evento..."
                    android:maxLines="4"
                    android:ellipsize="end"
                    style="@style/Style.FitMakers.Body"
                    android:textColor="#333333"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgItemEvent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/bg_input_rounded"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnItemJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver detalles"
            android:layout_marginTop="12dp"
            style="@style/Style.FitMakers.Button.Green"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>