<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="60dp"> <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/white"
        android:layout_gravity="start|center_vertical"
        android:contentDescription="Volver"
        android:scaleType="fitCenter"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tvRoutineTitle"
        style="@style/Style.FitMakers.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Rutina"
        android:textSize="26sp"
        android:gravity="center"/>
</FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/dark_blue"
        app:strokeWidth="2dp"
        android:layout_marginBottom="32dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvDayMon"
                    style="@style/Style.FitMakers.DayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lu"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/selector_day_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvDayTue"
                    style="@style/Style.FitMakers.DayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ma"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/selector_day_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvDayWed"
                    style="@style/Style.FitMakers.DayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/selector_day_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvDayThu"
                    style="@style/Style.FitMakers.DayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ju"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/selector_day_background"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tvDayFri"
                    style="@style/Style.FitMakers.DayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vi"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/selector_day_background"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>