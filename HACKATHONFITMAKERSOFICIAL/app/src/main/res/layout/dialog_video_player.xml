<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_input_rounded"
    android:backgroundTint="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reproduciendo..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:layout_marginBottom="16dp">

            <VideoView
            android:id="@+id/vvPopup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/bg_message_sent"
            android:backgroundTint="#80000000"
            android:src="@android:drawable/ic_menu_crop"
            android:contentDescription="Pantalla Completa"
            android:padding="8dp"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <Button
        android:id="@+id/btnClosePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar VÃ­deo"
        style="@style/Style.FitMakers.Button.Secondary"/>
</LinearLayout>